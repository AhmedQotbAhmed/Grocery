<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="164dp"
    android:layout_height="201dp"
    android:background="#fff"

    android:id="@+id/linearLayout_cart"
    android:layout_marginLeft="5dp"
    android:weightSum="3">

    <ImageView

        android:id="@+id/product_favourite_it"
        android:layout_width="31dp"
        android:layout_height="22dp"
        android:layout_gravity="right"
        android:cropToPadding="false"
        android:foregroundGravity="right"
        android:paddingLeft="10dp"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:src="@drawable/ic_not__favorite" />

    <ImageView
        android:id="@+id/product_image_it"
        android:layout_width="138dp"
        android:layout_height="5dp"
        android:layout_gravity="left"
        android:layout_weight="2.2"
        android:maxWidth="43dp"
        android:maxHeight="34dp"
        android:scaleType="fitXY"

        android:src="@drawable/logo" />



    <TextView
        android:layout_marginTop="5dp"
        android:layout_weight="0.4"
        android:id="@+id/product_name_it"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Name"
        android:textStyle="bold"


        />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_weight="0.4"
        android:id="@+id/product_price_it"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Price"
        android:textStyle="bold"
        android:textColor="#C3000000"

        />


</LinearLayout>