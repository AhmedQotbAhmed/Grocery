<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="164dp"
    android:layout_height="200dp"
    android:layout_marginStart="5dp"
    android:layout_marginBottom="5dp"
    android:background="#fff"
    android:padding="2dp"

    android:id="@+id/linearLayout_favorite"
    android:weightSum="3">

    <ImageView
        android:id="@+id/product_favourite_fa"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_gravity="right|top"


        android:src="@drawable/ic_favorite" />

    <ImageView
        android:id="@+id/product_image_fa"
        android:layout_width="138dp"
        android:layout_height="5dp"
        android:layout_gravity="left"
        android:layout_weight="2.4"
        android:maxWidth="43dp"
        android:maxHeight="34dp"
        android:scaleType="fitXY"

        android:src="@drawable/logo" />



    <TextView
        android:layout_marginTop="5dp"
        android:layout_weight="0.3"
        android:id="@+id/product_name_fa"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Name"
        android:textStyle="bold"


        />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_weight="0.3"
        android:id="@+id/product_price_fa"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Price"
        android:textStyle="bold"
        android:textColor="#C3000000"

        />


</LinearLayout>